{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "acc new",
            "type": "shell",
            "command": "acc",
            "args": [
                "new",
                "${input:contestID}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/contests"
            },
            "problemMatcher": []
        },
        {
            "label": "test && submit",
            "dependsOn": [
                "Run oj",
                "Run acc"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Run oj",
            "type": "shell",
            "command": "oj t -c 'python3 main.py' -d ./tests/",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run acc",
            "type": "shell",
            "command": "acc s main.py -- --guess-python-interpreter pypy",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run main.py with sample input",
            "type": "shell",
            "command": "cat ./tests/sample-${input:sampleNumber}.in | python3 ./main.py",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "contestID",
            "type": "promptString",
            "description": "Enter the contest ID",
            "default": "abc123"
        },
        {
            "id": "sampleNumber",
            "type": "promptString",
            "description": "Enter the sample number:",
            "default": "1"
        }
    ]
}