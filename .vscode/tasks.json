{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "download (新しいコンテストのデータをダウンロード)",
            "type": "shell",
            "command": "acc",
            "args": [
                "new",
                "${input:contestID}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/contests"
            },
            "problemMatcher": []
        },
        {
            "label": "test && submit (テストと提出)",
            "type": "shell",
            "command": "oj t -c 'python3 main.py' -d ./tests/ && acc s main.py -- --guess-python-interpreter pypy --yes",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "label": "sample (サンプルを使って実行)",
            "type": "shell",
            "command": "cat ./tests/sample-${input:sampleNumber}.in | python3 ./main.py",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "update main.py (main.pyのテンプレートを更新する)",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/__template/copy-script.sh"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "contestID",
            "type": "promptString",
            "description": "Enter the contest ID",
            "default": "abc123"
        },
        {
            "id": "sampleNumber",
            "type": "promptString",
            "description": "Enter the sample number:",
            "default": "1"
        }
    ]
}