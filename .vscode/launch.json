{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "sampleを指定してデバッグ",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "args": [
                "--debug",
                "${input:sampleNumber}"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "inputs": [
        {
            "id": "sampleNumber",
            "type": "promptString",
            "description": "Enter the sample number:",
            "default": "1"
        }
    ]
}